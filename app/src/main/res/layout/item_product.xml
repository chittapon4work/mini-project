<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/product_item_bg"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_marginEnd="12dp"
        android:background="@drawable/product_image_bg"
        android:padding="2dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvProductDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="คำอธิบายสั้น ๆ"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:textColor="#555555"/>

        <TextView
            android:id="@+id/tvProductQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จำนวน: 0"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#333333"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginStart="8dp">

        <EditText
            android:id="@+id/etStockAmount"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:hint="จำนวน"
            android:inputType="number"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="6dp"
            android:background="@drawable/custom_rounded"/>

        <Button
            android:id="@+id/btnIncreaseStock"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="เติมสต็อก"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginBottom="6dp"
            android:background="@drawable/btn_save"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnAddCart"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+ ตะกร้า"
            android:textSize="12sp"
            android:background="@drawable/btn_save"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
