<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#25374A">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="6dp"
        android:backgroundTint="#7286B4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvReceiptInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ใบเสร็จ #12345"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:drawableLeft="@android:drawable/ic_menu_agenda"
                android:drawablePadding="8dp"
                android:paddingBottom="8dp"
                android:fontFamily="@font/roboto" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnReceiptDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ดูรายละเอียดใบเสร็จ"
                android:backgroundTint="#3949AB"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingVertical="8dp"
                android:drawableLeft="@android:drawable/ic_menu_info_details"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
